{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@policyimpact/shared/*": ["packages/shared/src/*"],
      "@policyimpact/api/*": ["packages/api/src/*"],
      "@policyimpact/web/*": ["packages/web/src/*"]
    }
  },
  "exclude": ["node_modules"]
}